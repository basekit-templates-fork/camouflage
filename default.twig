{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-default">

 <header>
     <div class="wrapper clearfix">
        <div class="companyheader clearfix">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'companyname', {"business": "Trvl"})|raw}}
        </div>
        {{widget('extendednavigation', 'navigationheader', {})|raw}}
    </div>
</header>

<div class="main wrapper clearfix">
    {{zone('main')|raw}}
</div>  

<footer>
    <div class="wrapper clearfix">
        <div class="responsivecolumns columns-two-50-50">
           <div class="column columns-two-left">
                {{widget('content', 'footercolumn1content1', {"content":"<h3>Lorem Ipsum</h3><p>Nulla scelerisque, metus vitae tincidunt egestas enim antela rutrum orci nec impe rdiet enim libero vitae eros nam mijus la rutrum orci nec impe.</p>"})|raw}}
           </div>
           <div class="column columns-two-right">
                {{widget('content', 'footercolumn2content1', {"content":"<h3>Pulvinar Vitae</h3>"})|raw}}
                {{widget('profile', 'footercolumn2socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
           </div>
        </div>
    </div>
</footer>

</div>

{% endblock %}
